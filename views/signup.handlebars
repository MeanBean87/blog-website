<section class="sign-in-page">
  <div class="form-heading">
    <h1>Sign Up</h1>
  </div>
  <div class="form-section">
    <form class="signup-form">
      <div>
        <label for="username-signup">Select a Username</label>
        <input type="text" class="entry-field" id="username-signup" autocomplete="username" />
      </div>
      <div>
        <label for="password-signup">Select a Password (minimum 8 characters.)</label>
        <input type="password" class="entry-field" id="password-signup" autocomplete="current-password"/>
      </div>
      <div>
        <button type="submit" class="login-signup-btn" id="signup">Sign Up!</button>
      </div>
    </form>
    <div id="error-message" style="color: red;"></div>
  </div>

  <p>Already have an account? <a href="/login">Login</a></p>
</section>

<script src="/js/signUp.js"></script>