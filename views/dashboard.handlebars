<section class="dashboard-container">
    <h2 class="dashboard-title">Your Dashboard</h2>
    <section class="new-post-section">
        <button type="button" class="btn" id="create-new-post">Create New Post</button>
    </section>
    {{#if posts.length}}
        <ul class="post-list">
            {{#each posts as |post|}}
            <li class="post-item">
                {{> post-container post}}
                <button onclick="window.location.href='/dashboard/edit/{{post.id}}'" class="btn">Edit Post</button>
            </li>
            {{/each}}
        </ul>
    {{/if}}
</section>
{{#if logged_in}}
    <script src="/js/createPost.js"></script>
{{/if}}
